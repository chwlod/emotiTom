<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="honeystudios.emotitom.HomeActivity"
    android:textAllCaps="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/welcome_screen"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentLeft="false"
            android:gravity="fill_vertical"
            android:layout_weight="1">

            <ImageButton
                style="@style/Button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/btn_add_emotiTom_Icon"
                android:layout_weight="1"
                android:textStyle="bold|italic"
                android:src="@drawable/ic_play_light" />

            <ImageButton
                style="@style/Button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:id="@+id/btn_edit_emotiTom_Icon"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:textStyle="bold|italic"
                android:src="@drawable/ic_cast_on_light" />

            <ImageButton
                style="@style/Button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SET"
                android:id="@+id/btn_settings_Icon"
                android:layout_weight="1"
                android:textStyle="bold|italic"
                android:src="@drawable/ic_setting_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/welcome_screen"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentLeft="false"
            android:gravity="fill_vertical"
            android:layout_weight="2">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="add new emotiTom"
                android:id="@+id/btn_add_emotiTom"
                android:layout_weight="1"
                android:textStyle="bold|italic"
                style="@style/Button" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="edit emotiToms"
                android:id="@+id/btn_edit_emotiToms"
                android:layout_gravity="top"
                android:layout_weight="1"
                style="@style/Button"
                android:textStyle="bold|italic" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/btn_settings"
                android:layout_weight="1"
                android:textStyle="bold|italic"
                style="@style/Button" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
